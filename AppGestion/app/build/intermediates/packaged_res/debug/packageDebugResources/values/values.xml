<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string-array name="estilos_array">
        <item>Femenino</item>
        <item>Masculino</item>
        <item>Neutro</item>
    </string-array>
    <color name="colorAccent">#F8BBD0</color>
    <color name="colorActivityBackground">#FCE4EC</color>
    <color name="colorBackground">#FFFFFF</color>
    <color name="colorButtonText">#FFFFFF</color>
    <color name="colorLightGray">#E0E0E0</color>
    <color name="colorPrimary">#E91E63</color>
    <color name="colorPrimaryDark">#C2185B</color>
    <color name="colorSurface">#FCE4EC</color>
    <color name="colorTextPrimary">#212121</color>
    <color name="colorTextSecondary">#757575</color>
    <color name="colorToolbarBackground">#F8BBD0</color>
    <color name="purple_500">#9C27B0</color>
    <color name="purple_700">#7B1FA2</color>
    <color name="teal_200">#80CBC4</color>
    <item name="boton" type="id"/>
    <string name="app_name">Gestión Almacén</string>
    <string name="menu_opciones">Opciones</string>
    <style name="ActivityBackground1" parent="AppTheme">
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>
    <style name="ActivityBackground2" parent="AppTheme">
        <item name="android:windowBackground">@color/colorSurface</item>
    </style>
    <style name="ActivityBackground3" parent="AppTheme">
        <item name="android:windowBackground">@color/colorActivityBackground</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        
        <item name="android:windowBackground">@color/colorActivityBackground</item>
        <item name="android:colorBackground">@color/colorSurface</item>

        
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>

        
        <item name="android:buttonStyle">@style/MinimalButton</item>
    </style>
    <style name="AppToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorToolbarBackground</item>
    </style>
    <style name="HeaderText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>
    <style name="MinimalButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="SubText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/teal_200</item>
    </style>
    <style name="Theme.App.Dark" parent="Theme.MaterialComponents.DayNight"/>
</resources>